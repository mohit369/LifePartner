<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/edit_text_bg"
    android:elevation="6dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginEnd="@dimen/_8sdp">

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="Sourabh Sharma"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:textSize="@dimen/_14sdp"
        android:fontFamily="@font/redhat_medium"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/contact_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="8502122345"
        android:textSize="@dimen/_10sdp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/redhat_regular"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/contact_no"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="mt@gmail.com"
        android:textSize="@dimen/_10sdp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/redhat_regular"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/function_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="Function Date: "
        android:textSize="@dimen/_10sdp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/redhat_medium"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/function_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/function_date_txt"
        app:layout_constraintBottom_toBottomOf="@id/function_date_txt"
        app:layout_constraintStart_toEndOf="@id/function_date_txt"
        android:text="23 web 2023"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/redhat_regular"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/budget_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/function_date_txt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="Budget: "
        android:textSize="@dimen/_10sdp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/redhat_medium"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/budget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/budget_txt"
        app:layout_constraintBottom_toBottomOf="@id/budget_txt"
        app:layout_constraintStart_toEndOf="@id/budget_txt"
        android:text="23000"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/redhat_regular"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>