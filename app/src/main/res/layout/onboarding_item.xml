<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/onboarding_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/online_dating_bro_1"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_title_1"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/onboarding_image"
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="@dimen/_25sdp"
        android:fontFamily="@font/redhat_semibold"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_description_1"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="@color/text_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_40sdp"
        app:layout_constraintVertical_bias="0"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="@dimen/_14sdp"
        android:fontFamily="@font/redhat_regular"/>



</androidx.constraintlayout.widget.ConstraintLayout>