<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="@dimen/_20sdp"
        android:fontFamily="@font/redhat_medium"
        android:textSize="@dimen/_12sdp"/>

    <EditText
        android:id="@+id/name_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/edit_text_bg"
        android:backgroundTint="#F4F4F4"
        android:padding="12dp"
        android:textColor="@color/black"
        android:fontFamily="@font/redhat_regular"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/_12sdp"
        android:dropDownWidth="match_parent"/>

    <TextView
        android:id="@+id/contact_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact No"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/redhat_medium"
        android:textSize="@dimen/_12sdp"/>

    <EditText
        android:id="@+id/contact_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/edit_text_bg"
        android:backgroundTint="#F4F4F4"
        android:padding="12dp"
        android:maxLength="10"
        android:digits="0123456789"
        android:textColor="@color/black"
        android:fontFamily="@font/redhat_regular"
        android:inputType="numberDecimal"
        android:imeOptions="actionNext"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/_12sdp"
        android:dropDownWidth="match_parent"/>

    <TextView
        android:id="@+id/email_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/redhat_medium"
        android:textSize="@dimen/_12sdp"/>

    <EditText
        android:id="@+id/email_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/edit_text_bg"
        android:backgroundTint="#F4F4F4"
        android:padding="12dp"
        android:textColor="@color/black"
        android:fontFamily="@font/redhat_regular"
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/_12sdp"
        android:dropDownWidth="match_parent"/>

    <TextView
        android:id="@+id/function_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Function Date"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/redhat_medium"
        android:textSize="@dimen/_12sdp"/>

    <EditText
        android:id="@+id/function_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/edit_text_bg"
        android:backgroundTint="#F4F4F4"
        android:padding="12dp"
        android:textColor="@color/black"
        android:fontFamily="@font/redhat_regular"
        android:inputType="text"
        android:focusable="false"
        android:clickable="true"
        android:imeOptions="actionNext"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/_12sdp"
        android:dropDownWidth="match_parent"/>

    <TextView
        android:id="@+id/budget_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Function Budget"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/redhat_medium"
        android:textSize="@dimen/_12sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_background"
        android:layout_marginEnd="@dimen/_20sdp">

        <Spinner
            android:id="@+id/budget_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@android:layout/simple_list_item_1"
            android:dropDownWidth="match_parent"/>

    </LinearLayout>

    <TextView
        android:id="@+id/function_detail_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Function Detail"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/redhat_medium"
        android:textSize="@dimen/_12sdp"/>

    <EditText
        android:id="@+id/function_detail_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/edit_text_bg"
        android:backgroundTint="#F4F4F4"
        android:padding="12dp"
        android:textColor="@color/black"
        android:fontFamily="@font/redhat_regular"
        android:inputType="textMultiLine"
        android:maxHeight="@dimen/_100sdp"
        android:imeOptions="actionNext"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/_12sdp"
        android:dropDownWidth="match_parent"/>

    <TextView
        android:id="@+id/location_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/redhat_medium"
        android:textSize="@dimen/_12sdp"/>

    <EditText
        android:id="@+id/location_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/edit_text_bg"
        android:backgroundTint="#F4F4F4"
        android:padding="12dp"
        android:textColor="@color/black"
        android:fontFamily="@font/redhat_regular"
        android:inputType="textMultiLine"
        android:imeOptions="actionNext"
        android:maxHeight="@dimen/_100sdp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/_12sdp"
        android:dropDownWidth="match_parent"/>

    <TextView
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:gravity="center"
        android:text="Send"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/redhat_semibold"
        android:textSize="@dimen/_14ssp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:background="@drawable/edit_text_bg"
        android:backgroundTint="@color/colorPrimary"/>

</LinearLayout>